<div class="container center">
	<h2><i class="far fa-handshake"></i> Follower Users</h2><br>
</div>

<div class="container">
	<% if @users.count > 0 %>
	<table class="table">
		<thead>
			<tr>
				<th>ユーザ</th>
				<th>ユーザ名</th>
				<th>ユーザ情報</th>
			</tr>
		</thead>
		<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag user, :profile_image, :fill, 70, 70, fallback: "no_image.jpg", size: '70x70' %></td>
			<td><%= user.name %></td>
			<td><%= link_to "詳細を見る", user_user_path(user) %></td>
		</tr>
		<% end %>
		</tbody>
	</table>
	<% else %>
		<p>ユーザーはいません</p>
	<% end %>
</div>
