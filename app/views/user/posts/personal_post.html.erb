<h2><%= @user.name %>さんの投稿一覧</h2>

<% if @user.posts.count > 0 %>
	<table>
		<thead>
			<tr>
				<th>投稿日</th>
				<th>タイトル</th>
				<th>カテゴリー</th>
			</tr>
		</thead>
		<tbody>
			<% @user.posts.each do |post| %>
				<tr>
					<td><%= post.created_at.strftime("%Y-%m-%d%H:%M") %></td>
					<td><%= link_to post.title, user_post_path(post) %></td>
					<td><%= post.category.category_name %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	<p>投稿はありません</p>
<% end %>