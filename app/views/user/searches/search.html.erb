
<h3>検索結果</h3>
<table>
	<thead>
		<tr>
		<th>ユーザー</th>
		<th>タイトル</th>
		<th>エピソード</th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |post| %>
			<tr>
				<td>
				<%= link_to user_user_path(post.user) do %>
					<%= attachment_image_tag(post.user, :profile_image, :fill, 50, 50, fallback: "no-image.jpg") %>
				<% end %>
				</td>
				<td><%= link_to post.title %></td>
				<td><%= post.body %></td>
			</tr>
		<% end %>
	</tbody>
</table>