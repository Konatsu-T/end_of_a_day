<div class="container center">
	<h2><i class="fas fa-hand-holding-heart"></i> <%= @user.name %>さんの投稿一覧</h2>
</div>

<div class="container personal">
	<% if @user.posts.count > 0 %>
		<% @user.posts.each do |post| %>
			<div class="personal-post">
				<p><i class="far fa-comment-dots"></i></p>
				<p class="personal-word"><%= link_to post.title, admin_post_path(post) %></p>
				<p class="personal-word2"><%= post.category.category_name %><br>
				<%= post.created_at.strftime("%Y-%m-%d%H:%M") %></p>
			</div>
		<% end %>
	<% else %>
	<p>投稿はありません</p>
	<% end %>
</div>