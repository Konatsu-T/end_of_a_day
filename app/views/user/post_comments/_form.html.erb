<%= form_for([post, post_comment], method: :post, url: user_post_post_comments_path(post), remote: true) do |f| %>
	<div class="row profile-edit">
		<div class="form-group col-md-6 col-md-offset-3">
			<%= f.text_area :comment, size: "50x5", placeholder: "コメントを入力してください", class: "form-control" %>
		</div>
	</div>
	<div class="row profile-edit">
		<div class="form-group col-md-2 col-md-offset-5"><%= f.submit 'コメントする', class: "form-control btn btn-warning" %>
		</div>
	</div>
<% end %>