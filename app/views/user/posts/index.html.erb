<h2>投稿一覧ページ</h2>

<br>

<h3>＊週間ランキング（いいねの多い投稿順）</h3>

<br>

<h3>＊カテゴリ一検索</h3>
<% @categories.each do |category| %>
	<ul>
		<li><%= link_to category.category_name, user_category_path(category) %>：
		<%= category.posts.count %>件
		</li>
	</ul>
<% end %>

<br>

<h3>＊キーワード検索バー</h3>
<%= form_tag(search_path, method: :get) do %>
	<%= text_field_tag :search %>
	<%= select_tag(:choice, options_for_select([["部分一致", "1" ],["後方一致", "2" ],["前方一致", "3" ],["完全一致", "4" ]])) %>
	<%= submit_tag "検索", :name => nil %>
<% end %>

<br>

<table>
	<thead>
		<tr>
			<th>投稿日</th>
			<!-- アイコン -->
			<th></th>
			<th>ユーザ名</th>
			<th>タイトル</th>
			<th>カテゴリー</th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |post| %>
			<tr>
				<td><%= post.created_at.strftime("%Y-%m-%d%H:%M") %></td>
				<td><%= attachment_image_tag post.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: '50x50' %></td>
				<td><%= link_to post.user.name, user_user_path(post.user) %></td>
				<td><%= link_to post.title, user_post_path(post) %></td>
				<td><%= post.category.category_name %></td>
			</tr>
		<% end %>
	</tbody>
</table>