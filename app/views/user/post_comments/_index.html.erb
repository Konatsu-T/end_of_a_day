<!-- コメント件数 -->
コメント数：<%= post_comments.count %>

<!-- コメント一覧 -->
<% post_comments.each do |post_comment| %>
	<p><%= attachment_image_tag post_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: '50x50' %>
	<%= post_comment.user.name %>さん</p>
	<p>コメント:<%= post_comment.comment %>
	(<%= post_comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %>)
	</p>
	<% if current_user == post_comment.user %>
		<p><%= link_to "削除",  user_post_post_comment_path(post_comment.post_id, post_comment.id, ), method: :delete, remote: true, data: { confirm: '削除してよろしいですか？' } %></p>
	<% end %>
<% end %>