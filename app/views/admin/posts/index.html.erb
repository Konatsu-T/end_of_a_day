<h2>投稿一覧</h2>

<table>
	<thead>
		<tr>
			<th>投稿日</th>
			<th>ユーザ名</th>
			<th>タイトル</th>
			<th>カテゴリー</th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |post| %>
			<tr>
				<td><%= post.created_at.strftime("%Y-%m-%d%H:%M") %></td>
				<td><%= post.user.name %></td>
				<td><%= link_to post.title, admin_post_path(post) %></td>
				<td><%= post.category.category_name %></td>
			</tr>
		<% end %>
	</tbody>
</table>