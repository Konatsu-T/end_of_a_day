<h2>マイページ編集</h2>

<% if @user.errors.any? %>
	<div>
		<p><%= @user.errors.full_messages.count %>errors prohibited this user from being saved:</p>
		<ul><% @user.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

	<%= form_for(@user, url: user_user_path(@user)) do |f| %>
	<table>
		<tr>
			<th><%= f.label "プロフィール画像" %></th>
			<td><%= f.attachment_field :profile_image %></td>
		</tr>
		<tr>
			<th><%= f.label "ユーザ名" %></th>
			<td><%= f.text_field :name %></td>
		</tr>
		<tr>
			<th><%= f.label "自己紹介" %></th>
			<td><%= f.text_area :introduction %></td>
		</tr>
			<th><%= f.label "メールアドレス" %></th>
			<td><%= f.email_field :email %></td>
		</tr>
	</table>
	<%= f.submit '保存する' %>
	<% end %>
<br>
<%= link_to "退会希望の方はこちら", withdraw_user_user_path(@user) %>