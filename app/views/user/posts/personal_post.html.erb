<div class="container center">
<h2><i class="fas fa-hand-holding-heart"></i> <%= @user.name %>さんのこれまで投稿した言葉</h2>

<div class="container personal">
	<% if @user.posts.count > 0 %>
			<% @posts.each do |post| %>
				<div class="personal-post">
					<p><i class="far fa-comment-dots"></i></p>
					<p class="personal-word">「<%= link_to post.title, user_post_path(post) %>」</p>
					<p class="personal-word2"><%= post.category.category_name %></p><br>
				</div>
			<% end %>
	<% else %>
		<p>投稿はありません</p>
	<% end %>
</div>

<p><%= paginate @posts, class: "paginate" %></p>
</div>
